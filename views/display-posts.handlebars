{{!-- NAV PARTIAL --}}
<div class="nav">
{{>nav}}
</div>
<br><br>

{{!-- Display All Posts --}}
<div class="mb-5" id="display-posts">

  {{!-- Header Welcome User --}}
  <div class="col-md-3 offset-9 mt-3 mb-3 text-center">
    <h5 class="greeting">Welcome <span class="member-name"></span></h5>
  </div>

  {{!-- Body --}}
  <div class="container">
    <div class="row">
      {{!-- Category as Side Nav --}}
      {{>sideCategory}}

      {{!-- Show All Posts --}}
      <div class="col-8">
        <h3 class="text-center topPost">Trending Posts</h3>
        {{!-- Iterate through 'posts' data item. --}}
        {{#each posts}}
          <div class="speech-bubble">
          {{!-- Title as card header --}}
          <h5 class="card-title"><a href="/post/{{this.id}}">{{this.text}}</h5></a>
          <hr>
          <div class="">
            <p class="">{{this.description}}</p>
            <p>-{{this.User.name}} </p>
            <button class= "like" value = '{{this.id}}'>Like</button>
          </div>
        </div>
        {{/each}}
      
</div>
      
</div>
      </div>

    </div>
  </div>
  {{!-- End Body --}}
  

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/display.js"></script>
