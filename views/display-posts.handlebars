{{!-- NAV PARTIAL --}}
<div class="nav">
{{>nav}}
</div>
<br><br>

{{!-- Display All Posts --}}
<div class="mb-5" id="display-posts">

  {{!-- Header Welcome User --}}
  {{>welcome}}

  {{!-- Body --}}
  <div class="container">
    <div class="row">
      {{!-- Category as Side Nav --}}
      {{>sideCategory}}

      {{!-- Show All Posts --}}
      <div class="col-8">
        <h2 class="text-center topPost">Trending Posts</h2>
        {{!-- Iterate through 'posts' data item. --}}
        {{#each posts}}
        <div class="card mt-4">
          {{!-- Title as card header --}}
          <h5 class="card-header"><a href="/post/{{this.id}}">{{this.text}}</h5></a>
          <div class="card-body">
            <p class="card-text">{{this.description}}</p>
            <p>Created By:{{this.User.name}} </p>
            <button class= "like" value = '{{this.id}}'>Like</button>
          </div>
        </div>
        {{/each}}
      </div>

    </div>
  </div>
  {{!-- End Body --}}
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/display.js"></script>
