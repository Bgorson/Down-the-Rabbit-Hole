{{!-- NAV PARTIAL --}}
<div class="nav">
{{>nav}}
</div>
<br><br>

{{!-- Display All Posts --}}
<div class="mb-5" id="display-posts">

  {{!-- Header Welcome User --}}
  {{>welcome}}

  {{!-- Body --}}
  <div class="container">
    <div class="row">
      {{!-- Category as Side Nav --}}
      {{>sideCategory}}

      {{!-- Show All Posts --}}
      <div class="col-8">
        <h2 class="text-center topPost">Trending Posts</h2>
        {{!-- Iterate through 'posts' data item. --}}
        {{#each posts}}
          <div class="speech-bubble">
          {{!-- Title as card header --}}
          <h5 class=""><a href="/post/{{this.id}}">{{this.text}}</h5></a>
            <hr>
          <div class="card-body">
            <p class="card-text">{{{this.description}}}</p>
            <p>{{this.User.name}} </p>
            <hr>
            <div class = 'voting'+ {{this.id}}>
            <i class= "like fas fa-carrot fa-lg" value = '{{this.id}}'></i>
             <i class= "dislike far fa-frown-open fa-lg" value = '{{this.id}}'></i>
          </div>
          </div>
        </div>
        {{/each}}
      
</div>
      
</div>
      </div>

    </div>
  </div>
  {{!-- End Body --}}
  

</div>
<link rel="stylesheet" href="/styles/main.css" media="screen" title="no title" charset="utf-8">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/display.js"></script>
