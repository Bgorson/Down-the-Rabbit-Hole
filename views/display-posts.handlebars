{{!-- NAV PARTIAL --}}
<div class="nav">
{{>nav}}
</div>
<br><br>
<div id="display-posts">
        <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>

  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h3 class="text-center">Current Happenings</h3>
        {{!-- Iterate through 'posts' data item. --}}
        {{#each posts}}
        <div class="card mt-4">
          {{!-- Title as card header --}}
          <h5 class="card-header"><a href="/post/{{this.id}}">{{this.text}}</h5></a>
          <div class="card-body">
            <p class="card-text">{{this.description}}</p>
            <p>Created By:{{this.User.name}} </p>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/display.js"></script>
