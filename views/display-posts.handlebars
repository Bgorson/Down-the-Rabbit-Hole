
{{!-- NAV PARTIAL --}}
<div class="nav">
{{>nav}}
</div>
<br><br>

{{!-- Display All Posts --}}
<div class="mb-5" id="display-posts">

  {{!-- Header Welcome User --}}
  {{>welcome}}

  {{!-- Body --}}
  <div class="container">
    <div class="row">
      {{!-- Category as Side Nav --}}
      {{>sideCategory}}

      {{!-- Show All Posts --}}
      <div class="col-8 offset-2">
        <h2 class="text-center topPost">Trending Posts</h2>
        {{!-- Iterate through 'posts' data item. --}}
        {{#each posts}}
        <div class="card mt-4">
          {{!-- Title as card header --}}
          <h5 class="card-header"><a href="/post/{{this.id}}">{{this.text}}</h5></a>
          <div class="card-body">

            {{!-- Limit Post Content --}}
            <p class="card-text post-content"
              value="{{this.id}}">{{this.description}}</p>

            <p>Created By:{{this.User.name}} </p>
            <p>Posted At: {{setTime this.createdAt}}</p>
            <div class = 'voting'+ {{this.id}}>
            <i class= "like fas fa-carrot fa-lg" value = '{{this.id}}'></i>
             <i class= "dislike far fa-frown-open fa-lg" value = '{{this.id}}'></i>
          </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{!-- End Show All Posts --}}

    </div>
  </div>
  {{!-- End Body --}}
</div>


