{{!-- NAV PARTIAL --}}
<div class="nav">
  {{>nav}}
</div>
<br><br>

{{!-- Display All Posts --}}
<div class="mb-5" id="display-one-post">

  {{!-- Header Welcome User --}}
  {{>welcome}}

  {{!-- Body --}}
  <div class="container">
    <div class="row">
      {{!-- Category as Side Nav --}}
      {{>sideCategory}}

      {{!-- Show One Post. --}}
      <div class="col-8">
        <h2 class="text-center topPost">For The Curious...</h2>

        <div class="card mt-4">
          <h5 class="card-header">{{{linkify response.post.text}}}</h5>
          <div class="card-body">
            <p class="card-text">{{{linkify response.post.description}}}</p>
            <p><strong>Author: </strong> {{response.post.name}} </p>
            <p>Posted: {{setTime response.post.createdAt}}</p>
                        <div class = 'voting'>
            <i class= "hvr-float like fas fa-carrot fa-lg" value = '{{response.post.id}}'></i>
             <i class= "hvr-sink dislike far fa-frown-open fa-lg" value = '{{response.post.id}}'></i>
          </div>
            <div style= "display:none" class = "counter">
            <p>Popularity: {{response.post.counter}}</p>
          </div>
            <hr>
            <p><strong>Comments:</strong></p>
            {{#each response.post.comment}}
            <p>Created by: {{this.name}}</p>
            <p>Time: {{setTime this.createdAt}}</p>
            {{!-- creates a tag links for any urls that are detected --}}
            <p> {{{linkify this.text}}}</p>
            {{/each}}
            

          </div>
        </div>

        {{!-- Enter Comment --}}
        <div id="myModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <a href="/login">Click here to Login</a>
          </div>
        </div>

        <form class="clearfix mb-4 mt-4" action="POST">
          <div class="form-group mb-4">
            <label id="comment" class="text-light" for="comment-description">
              <h3>Add a Comment</h3></label>
            <textarea class="form-control" id="comment-description" rows="3"
              aria-describedby="commet-description" placeholder="Enter Comment"></textarea>
          </div>
          <button id="submit" post="{{response.post.id}}" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
      {{!-- End Show One Post --}}
    </div>
  </div>
  {{!-- End Body --}}
</div>
{{!-- End singlePost --}}

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
